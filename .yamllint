---
extends: 'default'

rules:
  braces:
    max-spaces-inside: 1
    max-spaces-inside-empty: 0
    min-spaces-inside: 1
    min-spaces-inside-empty: 0
  document-end:
    level: 'warning'
    present: false
  empty-lines:
    max: 1
  indentation:
    spaces: 2
  line-length: 'disable'
  quoted-strings:
    quote-type: 'single'
  truthy:
    check-keys: false
