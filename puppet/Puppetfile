# The latest release (version 1.5.0) doesn't contain
# https://github.com/puppetlabs/puppetlabs-java/commit/afcb95b10be3e5e0056f4760dc210647ea4ad92e,
# which adds support for Ubuntu 16.04.
mod 'puppetlabs/java', :git => 'https://github.com/puppetlabs/puppetlabs-java'

# The latest release (version 1.3.0) doesn't contain
# https://github.com/voxpupuli/puppet-nodejs/pull/199, which fixes
# https://github.com/voxpupuli/puppet-nodejs/issues/158.
mod 'puppet/nodejs', :git => 'https://github.com/voxpupuli/puppet-nodejs'

# The latest release (version 3.4.2) doesn't work with PHP 7.0.
# See https://github.com/mayflower/puppet-php/issues/146.
mod 'mayflower/php', :git => 'https://github.com/mayflower/puppet-php'

# Dependencies.
mod 'camptocamp/archive', '0.8.1'
