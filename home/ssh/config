IgnoreUnknown Include
Include conf.d/*.conf

Host bitbucket.org stash.atlassian.com
  IdentityFile ~/.ssh/keys/bitbucket.key

Host github.com
  IdentityFile ~/.ssh/keys/github.key

Host homeassistant.spence.network homeassistant.local
  IdentityFile ~/.ssh/keys/rpi.key
  User root

Host 192.168.1.1 gateway.spence.network gateway.local *AccessPoint.spence.network *Switch.spence.network
  IdentityFile ~/.ssh/keys/ubnt.key
  User josh

Host kube*.local
  IdentityFile ~/.ssh/keys/rpi.key
	StrictHostKeyChecking no
	User pi
	UserKnownHostsFile /dev/null

Host *
  AddKeysToAgent yes
  Compression yes
  ConnectTimeout 10
  ExitOnForwardFailure yes
  ForwardAgent no
  ForwardX11 no
  GSSAPIAuthentication no
  HashKnownHosts no
  IdentityFile ~/.ssh/keys/%h.key
  PasswordAuthentication no
  PubkeyAuthentication yes
  ServerAliveCountMax 8
  ServerAliveInterval 15
  TCPKeepAlive yes
