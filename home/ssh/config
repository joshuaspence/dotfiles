Host git.github.com
    User git

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host secure.phabricator.com
    User dweller
    IdentityFile ~/.ssh/keys/phacility.com

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host *.freelancer.com *.fln-dev.net
    User josh
    IdentityFile ~/.ssh/keys/freelancer.com

Host *.syd1.fln-dev.net
    StrictHostKeyChecking no

Host git.freelancer.com gitlab.freelancer.com
    HostName git.freelancer.com
    User git

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host *
    CheckHostIP yes
    Compression no
    CompressionLevel 6
    ForwardAgent no
    ForwardX11 no
    NoHostAuthenticationForLocalhost yes
    PubkeyAuthentication yes
    PasswordAuthentication yes

    ## Specifies whether user authentication based on GSSAPI is allowed.
    ##
    ## @link http://blogs.perl.org/users/smylers/2011/08/ssh-productivity-tips.html
    GSSAPIAuthentication no

    ## Indicates that `ssh` should hash host names and addresses when they
    ## are added to `~/.ssh/keys/known_hosts`.
    HashKnownHosts yes

    ## Specifies that `ssh` should only use the authentication identity
    ## files configured in the `ssh` configuration files, even if
    ## `ssh-agent` offers more identities.
    IdentitiesOnly yes

    ## Specifies a file from which the user's DSA, ECDSA or RSA
    ## authentication identity is read.
    IdentityFile ~/.ssh/keys/%h

    ## Allow local command execution via the "LocalCommand" option or using
    ## the `!command` escape sequence in `ssh`.
    PermitLocalCommand no

    ## If the network disappears your connection will hang, but if it then
    ## re-appears within 10 minutes it will resume working.
    ##
    ## @link http://blogs.perl.org/users/smylers/2011/08/ssh-productivity-tips.html
    ## @{{{
        #ServerAliveCountMax 10
        #ServerAliveInterval 60
        #TCPKeepAlive no
    ## @}}}

    ## Specifies whether to verify the remote key using DNS and SSHFP
    ## resource records.
    VerifyHostKeyDNS yes
