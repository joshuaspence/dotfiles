Host git.github.com
    User git

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host secure.phabricator.com
    User dweller
    IdentityFile ~/.ssh/keys/phacility.com

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host *.freelancer.com *.fln-dev.net *.warriorforum.com *.flnltd.com
    User josh
    IdentityFile ~/.ssh/keys/freelancer.com

Host *.syd1.fln-dev.net
    StrictHostKeyChecking no

Host git.freelancer.com gitlab.freelancer.com
    HostName git.freelancer.com
    User git

    ForwardAgent no
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes

Host *.internal.wf.flnltd.com
    ProxyCommand ssh -q jump.warriorforum.com nc %h %p

Host *.internal.wf-stg.flnltd.com
    ProxyCommand ssh -q ec2-54-88-243-172.compute-1.amazonaws.com nc %h %p

Host *
    CheckHostIP yes
    Compression no
    CompressionLevel 6
    ExitOnForwardFailure yes
    ForwardAgent no
    ForwardX11 no
    HashKnownHosts yes
    IdentitiesOnly yes
    IdentityFile ~/.ssh/keys/%h
    NoHostAuthenticationForLocalhost yes
    PasswordAuthentication yes
    PermitLocalCommand no
    ProxyUseFdpass yes
    PubkeyAuthentication yes
    StrictHostKeyChecking ask
    VerifyHostKeyDNS yes

    ## If the network disappears your connection will hang, but if it then
    ## re-appears within 10 minutes it will resume working.
    ##
    ## @link http://blogs.perl.org/users/smylers/2011/08/ssh-productivity-tips.html
    ## @{{{
        #ServerAliveCountMax 10
        #ServerAliveInterval 60
        #TCPKeepAlive no
    ## @}}}
