Include conf.d/*.conf

Host bitbucket.org stash.atlassian.com production-mirror-farm-*.bserv.internal.atlassian.com bitbucket-mirror-*.internal.atlassian.com
  IdentityFile ~/.ssh/keys/bitbucket.key

Host github.com
  IdentityFile ~/.ssh/keys/github.key

Host homeassistant homeassistant.spence.network
  IdentityFile ~/.ssh/keys/rpi.key
  User root

Host gateway Gateway.spence.network *AccessPoint.spence.network *Switch.spence.network
  IdentityFile ~/.ssh/keys/ubnt.key
  User josh

Host controller UniFi-Controller.spence.network
  PasswordAuthentication yes
  PubkeyAuthentication no
  User ubnt

Host kube*.spence.network
  IdentityFile ~/.ssh/keys/rpi.key
	StrictHostKeyChecking no
	User pi
	UserKnownHostsFile /dev/null

Host *
  AddKeysToAgent yes
  Compression yes
  ConnectTimeout 10
  ExitOnForwardFailure yes
  ForwardAgent no
  ForwardX11 no
  GSSAPIAuthentication no
  HashKnownHosts no
  IdentityFile ~/.ssh/keys/%h.key
  PasswordAuthentication no
  PubkeyAuthentication yes
  ServerAliveCountMax 8
  ServerAliveInterval 15
  TCPKeepAlive yes
