"/
"" Configuration for {@link http://github.com/Lokaltog/powerline Powerline}.
""
"" @author Joshua Spence
"" @file   ~/.vim/after/plugin/bundle/opowerline.vim
"\

"" Enable the fancy symbols.
let g:Powerline_symbols='fancy'

"" Configure the "fillchars" setting to disable statusline fillchars.
set fillchars+=stl:\ ,stlnc:\

"" Appearance.
let g:Powerline_theme='default'
let g:Powerline_colorscheme='default'

"" Always show the statusline.
set laststatus=2
