# Request a compressed response.
compressed

# When using `-o`, create the local directory hierarchy if necessary.
create-dirs

# Fail silently (no output at all) on server errors.
fail

# Follow redirects.
location

# Automatically set the previous URL when following a `Location` header.
referer = ";auto"

# Use `Content-Disposition` filename instead of URL.
remote-header-name

# Show error messages when `curl` fails.
show-error
