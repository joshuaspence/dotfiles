# If not running interactively, don't do anything.
# See https://unix.stackexchange.com/a/257613.
if [[ $- != *i* ]]; then
  return
fi

shopt -s extglob

function _include() {
  for FILE in ~/.local/share/chezmoi/"$1"/**.@(bash|sh); do
    source "${FILE}"
  done
}

_include src/config
_include src/completion
_include src/functions

unset _include
