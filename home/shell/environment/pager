#!/bin/sh

# Use `less` as the default pager.
if type less >/dev/null 2>&1; then
    export PAGER=$(which less)
else
    echo "Unable to set PAGER environment variable" >&2
fi

# Allow `less` to show color escape sequences.
export LESS='-R'

# Set the less input preprocessor.
if type lesspipe >/dev/null 2>&1; then
    eval $(lesspipe)
fi
