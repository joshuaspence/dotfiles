##
# Unset environment variables.
##
unset MANPATH

##
# We need the prepend-path function.
##
command -v prepend-path >/dev/null || source "$HOME/.shell/functions/path/prepend"

##
# ~/bin should be in the front of PATH if it exists.
##
if [[ -d $HOME/bin ]]; then
    prepend-path PATH "$HOME/bin"
fi

##
# ~/man should be in the front of MANPATH if it exists.
##
if [[ -d $HOME/man ]]; then
    command -v manpath >/dev/null && MANPATH=$(manpath -q)
    prepend-path MANPATH "$HOME/man"
fi

##
# Export environment variables.
##
export PATH
export MANPATH
