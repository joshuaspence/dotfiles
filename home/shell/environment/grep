# Unset environment variables.
unset GREP_COLOR
unset GREP_OPTIONS

# Make sure `grep` is installed.
command -v grep >/dev/null || return

source "$HOME/.shell/environment/color"

if $HAS_COLOR; then
    GREP_COLOR='1;33'
    GREP_OPTIONS='--color=auto'
fi

# Export environment variables.
export GREP_COLOR
export GREP_OPTIONS
