# Unset environment variables.
unset EC2_HOME
unset EC2_PRIVATE_KEY
unset EC2_CERT

# Make sure Amazon EC2 API Tools are installed. To do this, we will just check
# whether `ec2-version` is installed.
command -v ec2-version >/dev/null || return

# Set and export environment variables.
if [[ -d $HOME/.ec2 ]]; then
    export EC2_HOME="$HOME/.ec2"
    export EC2_PRIVATE_KEY=$(ls "$EC2_HOME/pk-*.pem" 2>/dev/null | head -1)
    export EC2_CERT=$(ls "$EC2_HOME/cert-*.pem" 2>/dev/null | head -1)
fi
