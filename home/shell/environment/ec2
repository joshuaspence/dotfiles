# Unset environment variables.
unset EC2_HOME
unset EC2_PRIVATE_KEY
unset EC2_CERT

# Make sure `ec2-version` is installed.
command -v ec2-version >/dev/null || return

# Set environment variables.
if [ -d "$HOME/.ec2" ]; then
    EC2_HOME=$HOME/.ec2
    EC2_PRIVATE_KEY="$(ls "$EC2_HOME/pk-*.pem" 2>/dev/null)"
    EC2_CERT="$(ls "$EC2_HOME/cert-*.pem" 2>/dev/null)"
fi

# Export environment variables.
export EC2_HOME
export EC2_PRIVATE_KEY
export EC2_CERT
