# Unset environment variables.
unset MANPAGER

# Make sure `man` is installed.
command -v man >/dev/null || return

# The pager to use with the `man` command.
[ -n "$PAGER"] || source "$HOME/.shell/environment/pager"
export MANPAGER="$PAGER"

# Use `less` colors for `man` pages.
#
# @link http://nion.modprobe.de/blog/archives/572-less-colors-for-man-pages.html
[ -n $HAS_COLOR ] || source "$HOME/.shell/environment/color"
if $HAS_COLOR; then
	export LESS_TERMCAP_mb=$(printf "${NO_STYLE}${RED}")
	export LESS_TERMCAP_md=$(printf "${NO_STYLE}${RED}")
	export LESS_TERMCAP_me=$(printf "${NO_STYLE}")
	export LESS_TERMCAP_se=$(printf "${NO_STYLE}")
	export LESS_TERMCAP_so=$(printf "${BOLD}${BLUE_BACKGROUND}${YELLOW}")
	export LESS_TERMCAP_ue=$(printf "${NO_STYLE}")
	export LESS_TERMCAP_us=$(printf "${NO_STYLE}${GREEN}")
fi
