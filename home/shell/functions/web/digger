# Check for the prerequisite functions.
command -v dig >/dev/null || return 1

##
# All the dig info
#
# @param [String] The domain name.
#
# @link http://github.com/stevehodgkiss/dotfiles/blob/master/functions
#
digger() {
    if [ $# != 1 ] || [ -z "$1" ]; then
        echo "Usage: digger <domainname>" >&2
        return 1
    fi

    dig +nocmd "$1" any +multiline +noall +answer
}
