# Don't redefine this function.
command -v sh_source_r >/dev/null && return

# Check for the prerequisite functions.
command -v source >/dev/null || return 1

##
# Recursive source function.
#
# @param [String] The path of the file or directory to source.
#
sh_source_r() {
    local file
    for file in $(find "$1" -type f -readable -regex '.*/[^.]*' -o -regex ".*\.${SHELL}" 2>/dev/null); do
        source "$file"
    done
}
