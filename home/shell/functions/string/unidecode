# Check for the prerequisite functions.
command -v perl >/dev/null || return 1

##
# Decode \x{ABCD}-style Unicode escape sequences.
#
# @param @todo
#
# @link http://github.com/stevehodgkiss/dotfiles/blob/master/functions
#
unidecode() {
    perl -e "binmode(STDOUT, ':utf8'); print \"$@\""
    echo # newline
}
