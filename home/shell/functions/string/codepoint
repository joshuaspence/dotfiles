# Don't redefine this function.
command -v codepoint >/dev/null && return

# Check for the prerequisite functions.
command -v perl >/dev/null || return 1

##
# Get a character's Unicode code point.
#
# @param [Character] The input character.
#
# @link https://github.com/stevehodgkiss/dotfiles/blob/master/functions
#
function codepoint() {
    if [ $# -lt 1 ] || [ -z "$1" ]; then
        echo "Usage: codepoint <character>" >&2
        return 1
    fi

    perl -e "use utf8; print sprintf('U+%04X', ord(\"$@\"))"
    echo
}
