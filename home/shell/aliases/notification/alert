##
# Add an `alert` alias for long running commands. Use like so:
#   `sleep 10; alert`
#
# Another example:
#   `( sleep 5 && alert "slept OK" || alert "sleep failed" ) &`
#
# @param [String] The alert text.
# @link @todo
#
alias alert='
	notify-send --urgency=low \
    	-i $([ $? -eq 0 ] && echo '\''terminal'\'' || echo '\''error'\'') \
    	"$(history | tail -1 | sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"
'
