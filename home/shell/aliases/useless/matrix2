# Don't overwrite alias.
command -v matrix2 >/dev/null && return

##
# Cool "The Matrix" type screens.
#
# @link @todo
#
alias matrix2='(echo -ne "\e[32m"
    while true; do
        echo -ne "\e[$(($RANDOM % 2 + 1))m"
        tr -c "[:print:]" " " </dev/urandom | dd count=1 bs=50 2>/dev/null
    done)'
