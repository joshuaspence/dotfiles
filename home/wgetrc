# Add a ".html" extension to "text/html" or "application/xhtml+xml" files that
# lack one, or a ".css" extension to "text/css" files that lack one.
adjust_extension = on

# Use the Content-Disposition header, if any, to use the correct destination
# filename. This will save "http://example.com/download.php?id=123" as "foo.txt"
# instead of "download.php?id=123" when there is a header that says
# "Content-Disposition: ...; filename=foo.txt".
#content_disposition = on # Commented out due to extreme bugginess.

# Follow FTP links from HTML documents by default.
follow_ftp = on

# Use UTF-8 as the default system encoding. Disabled as it makes `wget` builds
# that don't support this feature unusable. Does anyone know how to
# conditionally configure a wget setting?
#
# @link http://unix.stackexchange.com/q/34730/6040
#local_encoding = UTF-8

# Do not go up in the directory structure when downloading recursively.
no_parent = on

# Lowering the maximum depth of the recursive retrieval is handy to prevent
# newbies from going too "deep" when they unwittingly start the recursive
# retrieval. The default is 5.
reclevel = 5

# Retry even when the connection was refused.
retry_connrefused = on

# Ignore "robots.txt" and "<meta name=robots content=nofollow>".
robots = off

# Print the HTTP and FTP server responses.
server_response = on

# Wait 60 seconds before timing out. This applies to all timeouts: DNS, connect
# and read. The default read timeout is 15 minutes.
timeout = 60

# Use the server-provided last modification date, if available.
timestamping = on

# Retry a few times when a download fails. The default is 20.
tries = 5

# Use the last component of a redirection URL for the local file name.
trust_server_names = on

# Disguise as IE 9 on Windows 7.
user_agent = Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)
