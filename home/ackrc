# Always color, even if piping to a another program.
--color

# Matches by file name with.
--group

# Follow or don't follow symlinks.
--nofollow

# Operate on all files, regardless of type.
#--all

# Print the filename for each match.
--with-filename

# Ignore case in search strings.
#--ignore-case

# Ignore case in the search strings if PATTERN contains no uppercase characters.
--smart-case

# Types.
--type-add=css=.less,.sass,.scss
--type-add=html=.html.erb,.html.haml
--type-add=js=.coffee,.js.erb
--type-add=php=.php.inc
--type-add=ruby=.builder,.haml,.rake,.rspec,.ruby-version
--type-add=ruby=Gemfile,Rakefile

# Add types ack doesn't know about.
--type-set=coffee=.coffee
--type-set=config=.cfg,.conf,.config
--type-set=csv=.csv
--type-set=log=.log
--type-set=json=.json
--type-set=markdown=.md,.markdown
--type-set=puppet=.pp
--type-set=txt=.txt

# Ignore these directories.
--ignore-dir=doc
--ignore-dir=log
--ignore-dir=rdoc
--ignore-dir=tmp
--ignore-dir=vendor
