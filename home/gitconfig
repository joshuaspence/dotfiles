[include]
    path = ~/.gituser

[core]
    autocrlf = input
    eol = lf
    editor = vim
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore
    pager = $PAGER
    whitespace = blank-at-eol, space-before-tab,-indent-with-non-tab,-tab-in-indent,trailing-space,tabwidth=4

[apply]
    whitespace = fix,error
[branch]
  autosetupmerge = true
[diff]
    tool = meld
    renames = copy
    suppressBlankEmpty = true
    #ignoreSubmodules = true
    mnemonicprefix = true
[merge]
    summary = true
    verbosity = 1
    tool = meld
[mergetool]
    keepBackup = false
[rerere]
    # Remember my merges.
    # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
    enabled = true

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gist:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"

[alias]
    amend = commit --amend

    # Various pretty loggers from various places.
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lc = log ORIG_HEAD.. --stat --no-merges

    # @link http://blog.kfish.org/2010/04/git-lola.html
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ll = log --graph --date=short

    # @link http://git.wiki.kernel.org/index.php/Aliases
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short

    # Attempt to cleanup some common problems.
    unfuck = !git fsck && git remote prune $(git remote) && git gc --aggressive --auto

    # @link https://github.com/cypher/dotfiles/blob/master/gitconfig
    ls-ignored = ls-files --exclude-standard --ignored --others

[help]
  autocorrect = 1

[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[alias]
  # Display current status of repository
  wtf = !$ZSH/bin/git-wtf

  # Count commits by author
  count = !git shortlog -sn

  # Undo a `git push`
  undopush = push -f origin HEAD^:master
  undo-push = !git push -f origin HEAD^:master

  # Show verbose output about tags, branches, or remotes
  tags = tag -l
  branches = branch -a
  remotes = remote -v



[alias]
    browse       = !hub browse
    w            = !hub browse
    compare      = !hub compare
    cb           = !git-cut-branch
    sh           = !git-sh
    grab         = !git-grab
    thanks       = !git-thanks
    track        = !git-track
    ll           = log --pretty=oneline --abbrev-commit --max-count=15
    wip          = !git add -u && git commit -m ...
    wipc         = !date >> WIP && git add WIP && git commit -m ...
    fp           = format-patch --stdout
    ci           = commit
    x            = checkout HEAD
    bv           = !git branch --color -v | cut -c1-100
    incoming     = !git-incoming
    in           = !git-incoming
    outgoing     = !git-outgoing
    out          = !git-outgoing
    s            = status -sb -uno --ignore-submodules=untracked
    st           = status
    sa           = status -sb --ignore-submodules=untracked

[help]
    browser = open

[branch]
    autosetupmerge = true

[diff]
    renames = copies
    mnemonicprefix = true

[push]
    default = current

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = rtomayko@gmail.com

[hub]
    http-clone = true

[browser "gitscm"]
    cmd = sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
