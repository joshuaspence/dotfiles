[include]
    path = ~/.gituser

[core]
    autocrlf = input
    eol = lf
    editor = vim
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore
    pager = $PAGER
    whitespace = blank-at-eol, space-before-tab,-indent-with-non-tab,-tab-in-indent,trailing-space,tabwidth=4

[apply]
    whitespace = fix,error
[branch]
  autosetupmerge = true
[diff]
    tool = meld
    renames = copy
    suppressBlankEmpty = true
    #ignoreSubmodules = true
    mnemonicprefix = true
[merge]
    summary = true
    verbosity = 1
    tool = meld
[mergetool]
    keepBackup = false
[rerere]
    # Remember my merges.
    # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
    enabled = true

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gist:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"

[alias]
    amend = commit --amend

    # Various pretty loggers from various places.
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lc = log ORIG_HEAD.. --stat --no-merges

    # From http://blog.kfish.org/2010/04/git-lola.html
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ll = log --graph --date=short

    # From https://git.wiki.kernel.org/index.php/Aliases
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short

    # Update current branch and master.
    sync = !git update && git checkout master && git pull && git checkout @{-1}

    # Attempt to cleanup some common problems.
    unfuck = !git fsck && git remote prune origin && git gc --aggressive --auto

    # From https://github.com/cypher/dotfiles/blob/master/gitconfig
    ls-ignored = ls-files --exclude-standard --ignored --others
