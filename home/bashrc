#!/bin/bash

# Set up command aliases.
[ -e "$HOME/.shell/aliases" ] && source_r "$HOME/.shell/aliases"

# We run the environment settings for all shells to ensure it's always set up.
[ -e "$HOME/.shell/environment" ] && source_r "$HOME/.shell/environment"

# Import user-defined functions.
[ -e "$HOME/.shell/functions" ] && source_r "$HOME/.shell/functions"

# If PS1 is defined then the shell should be interactive.
if [ -n "$PS1" ]; then
    [ -e "$HOME/.shell/completion" ] && source_r "$HOME/.shell/completion"
fi