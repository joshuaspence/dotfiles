# If not running interactively, don't do anything.
# See https://unix.stackexchange.com/a/257613.
if [[ $- != *i* ]]; then
  return
fi

shopt -s extglob

function _include() {
  for FILE in ~/.shell/"$1"/**.@(bash|sh); do
    source "${FILE}"
  done
}

_include config
_include completion
_include functions

unset _include
