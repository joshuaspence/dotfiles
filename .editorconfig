# http://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.pp]
indent_size = 2

[home/config/htop/htoprc]
trim_trailing_whitespace = false

[home/config/terminator/config]
indent_size = 2

[Makefile]
indent_style = tab
