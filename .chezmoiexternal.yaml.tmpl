---
.local/bin/aptfile:
  type: 'archive-file'
  path: 'bin/aptfile'
  stripComponents: 1
  url: '{{ (gitHubLatestRelease "seatgeek/bash-aptfile").TarballURL }}'

.local/bin/chezmoi:
  type: 'file'
  executable: true
  url: '{{ replace "/releases/tag/" "/releases/download/" (gitHubLatestRelease "twpayne/chezmoi").HTMLURL }}/chezmoi-{{ .chezmoi.os }}-{{ .chezmoi.arch }}'

.local/share/liquidprompt:
  type: 'git-repo'
  refreshPeriod: '168h'
  url: 'https://github.com/liquidprompt/liquidprompt.git'
  clone:
    args: ['--branch', 'stable']
